@model ManagementSystems.user

@{
    Layout = null; 
}
  <DocType html>

    <html>
    <head>
      <meta name="viewport" content="width-device-width" />
      <script src="~/style/jquery.js"></script>
      <link href="~/style/bootstrap.css" rel="stylesheet" />
      <script src="~/style/bootstrap.bundle.min.js"></script>

      <title>login</title>
    </head>
    <body>




      @using (Html.BeginForm())
      {
        @Html.AntiForgeryToken()

        <div class="container">
          <h4><strong>A<sup>3</sup>Inventory management Portal</strong></h4>
          <hr />
          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          

          <div class="row offset-md-3" style="margin-top:5%">
            <div class="form-group-col-lf-7">
              @Html.LabelFor(model => model.u_username, "Username", htmlAttributes: new { @class = "control-label col-md-2" })
              @Html.EditorFor(model => model.u_username, new { htmlAttributes = new { @class = "form-control" } })
            
            </div>
          </div>

          <div class="row offset-md-3">

            <div class="form-group-col-lf-7">
              @Html.LabelFor(model => model.u_password, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
              @Html.EditorFor(model => model.u_password, new { htmlAttributes = new { @class = "form-control" } })

            </div>
          </div>

  

          <div class="row offset-md-3">
            <div class="form-group-col-lf-7">
              <input type="submit" value="Create" class="btn btn-success btn-block" />
            </div>
          </div>
        
       <hr />
        </div>
      }


    </body>
  </html>

  </DocType>
